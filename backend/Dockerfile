FROM python:3.9
WORKDIR /code

ARG TOKEN
ARG SERVER_HOST
ARG HTTP_PATH
ARG NOTEBOOK_PATH
ARG CLUSTER_ID
ARG RESULT_DATABASE
ARG RESULT_TABLE_NAME
ARG SLACK_CHANNEL_URL
ARG SLACK_CHANNEL_NAME
ARG JIRA_TOKEN
ARG JIRA_URL
ARG JIRA_PROJECT_ID
ARG GIT_URL

ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONBUFFERED 1

ENV TOKEN=$TOKEN
ENV SERVER_HOST=$SERVER_HOST
ENV HTTP_PATH=$HTTP_PATH
ENV NOTEBOOK_PATH=$NOTEBOOK_PATH
ENV CLUSTER_ID=$CLUSTER_ID
ENV RESULT_DATABASE=$RESULT_DATABASE
ENV RESULT_TABLE_NAME=$RESULT_TABLE_NAME
ENV SLACK_CHANNEL_URL=$SLACK_CHANNEL_URL
ENV SLACK_CHANNEL_NAME=$SLACK_CHANNEL_NAME
ENV JIRA_TOKEN=$JIRA_TOKEN
ENV JIRA_URL=$JIRA_URL
ENV JIRA_PROJECT_ID=$JIRA_PROJECT_ID
ENV GIT_URL=$GIT_URL

COPY ./requirements.txt /code/requirements.txt

RUN pip install --no-cache-dir --upgrade -r /code/requirements.txt

COPY ./app /code/app

EXPOSE 8000

CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]